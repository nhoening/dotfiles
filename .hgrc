[ui]
username = Nicolas HÃ¶ning <nicolas@softwear.nl>
ssh = ssh -C
merge = vimdiff

[extensions]
color =
graphlog =
progress =
pager =
prompt = ~/hg-prompt/prompt.py
onsub = ~/workspace/softwear.ci/dev/onsub.py

[merge-tools]
vimdiff.executable = gvimdiff
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep

[alias]
lga = glog --style=~/dotfiles/hg-map-cmdline.lg

[pager]
pager = LESS='FSRX' less
attend = cat, diff, glog, log, incoming, outgoing, lg, show, lga

