[ui]
username = Nicolas HÃ¶ning <nicolas@softwear.nl>
ssh = ssh -C
merge = vimdiff

[extensions]
color =
graphlog =
progress =
pager =
shelve =
prompt = ~/hg-prompt/prompt.py
onsub = ~/workspace/softwear.ci/dev/onsub.py
rebase =
histedit = 

[merge-tools]
vimdiff.executable = gvimdiff
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep

[alias]
lga = glog --style=$HOME/workspace/dotfiles/mercurial-cli-templates/map-cmdline.lg
slog = log --style=$HOME/workspace/dotfiles/mercurial-cli-templates/map-cmdline.slog
nlog = log --style=$HOME/workspace/dotfiles/mercurial-cli-templates/map-cmdline.nlog
sglog = glog --style=$HOME/workspace/dotfiles/mercurial-cli-templates/map-cmdline.sglog

[pager]
pager = LESS='FSRX' less
attend = cat, diff, glog, log, incoming, outgoing, lg, show, lga

